body
  margin 0
  padding 0
  font-family 'Roboto', sans-serif

.slick-prev, .slick-next
  position absolute
  bottom -50px
  left 35%
  cursor pointer
  width auto
  padding 8px 10px
  border none
  outline none
  border-radius 3px
  background-color #f3e276
  margin 0 3px

.slick-next
  left 55%

.slick-prev
  left 20%

.carga
  position fixed
  width 100%
  height 100vh
  background-color rgba(38,50,56,0.95)
  z-index 40
  &-contenedor
    position relative
    width 80%
    max-width 300px
    max-height 20vh
    top 50%
    left 50%
    transform translate(-50%, -50%)
    text-align center
    img
      width 250px
      height 80px
    h3
      color #ffffff  

.header-contenedor
  width 100%
  height 70px
  position absolute
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  z-index 10
  transition all 1.1s ease-in-out
  margin-top 0
  .header-logo
    width 50%
    text-align center
    img 
      width 160px
      height 40px
      margin-top 12.5px
  .header-menu-burger
    width 60%

.icon-menu--content
  width 25px
  height 18px
  cursor pointer
  outline none 
  margin 26px 40px 0 auto
  display block

.icon-menu
  display inline-block
  margin-top 0
  outline none
  small
    display block
    border-radius 3em
    width 25px
    height 4px
    margin 0 0 3px 0
    background-color #ffffff
    transition all 0.3s ease-in-out
    &:nth-child(1), &:nth-child(3)
      width 15px
      margin-left 5px
    &:nth-child(3)
      margin-bottom 0
  &:hover
    outline none 

.icon-menu--active
  small
    &:nth-child(1), &:nth-child(3)
      transform rotate(45deg) translateY(5.7px)
      width 25px
      height 5px
      background-color color_official_red
    &:nth-child(2)
      width 0
      height 0
    &:nth-child(3)
      transform rotate(-45deg) translateY(-5.7px)

.overlay-menu
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  background-color rgba(243,226,118,90)
  z-index 7
  display none

.menu-options
  position absolute
  width 100%
  height auto
  top 50%
  left 50%
  transform translate(-50%, -50%)
  ul
    padding 0
    margin 0
    text-align center
    li
      list-style none
      height 45px
      line-height 45px
      a
        display block
        width 100%
        height 100%
        text-decoration none
        color #263238
        font-size 25px
        font-weight 500
        cursor pointer
        font-family 'Oswald', sans-serif
        transition all 0.8s ease-in-out
        &:hover
          transform scale(1.2)
          color #ffab40
          text-decoration block
          text-shadow 1px 1px 2px rgba(0,0,0,0.12)

